---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" color-mode="user">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    /* press-start-2p-regular - latin */
  @font-face {
  font-display: swap; /* Check https://developer.mozilla.org/en-US/docs/Web/CSS/@font-face/font-display for other options. */
  font-family: 'Press Start 2P';
  font-style: normal;
  font-weight: 400;
  src: url('../press-start-2p-v14-latin-regular.woff2') format('woff2'), /* Chrome 36+, Opera 23+, Firefox 39+ */
       url('../press-start-2p-v14-latin-regular.woff') format('woff'); /* Chrome 5+, Firefox 3.6+, IE 9+, Safari 5.1+ */
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --background-color: #dee2e6;
    --text-color: #212529;
    --card-background-color: #f8f9fa;
    --greyed-out-text-color: #adb5bd;
    --border-radius: 5px;
    --font-family: system-ui, sans-serif;
    --monospace-font-family: "Source Code Pro", monospace;
  }

  @media (prefers-color-scheme: dark) {
    :root[color-mode="user"] {
      --background-color: #212529;
      --text-color: #f8f9fa;
      --card-background-color: #343a40;
      --greyed-out-text-color: #212529;
    }
  }
  html {
    font-family: var(--font-family);
  }

  * {
    margin: 0px;
    padding: 0px;
  }

  body {
    background-color: var(--background-color);
    color: var(--text-color);
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media only screen and (max-width: 1200px) {
    body {
      align-items: flex-start;
    }
  }
</style>
